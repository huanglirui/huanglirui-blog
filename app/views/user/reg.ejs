<% include ../include/header%>
<div class="container">
    <form action="/user/reg" method="post" role="form" class="form-horizontal regForm">
        <div class="form-group">
            <label for="username" class="control-label col-sm-2">用户名</label>
            <div class="input-group col-sm-10">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <input type="text" class="form-control" id="username" name="username" placeholder="用户名" />
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="control-label col-sm-2">邮箱</label>
            <div class="input-group col-sm-10">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                <input type="text" class="form-control" id="email" name="email" placeholder="邮箱" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-sm-2">密码</label>
            <div class="input-group col-sm-10">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <input type="password" class="form-control" id="password" name="password" placeholder="密码" />
            </div>
        </div>
        <div class="form-group">
            <label for="repassword" class="control-label col-sm-2">重复密码</label>
            <div class="input-group col-sm-10">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <input type="password" class="form-control" id="repassword" name="repassword" placeholder="重复密码" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-primary submit">注册</button>
                <button type="reset" class="btn btn-danger reset">重置</button>
            </div>
        </div>
    </form>
</div>

<% include ../include/footer%>